<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3EDBC"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Switch : "
            android:textColor="#0000FF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/wifiSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@string/onClickButton"
            android:paddingVertical="16dp"
            android:text="WIFI"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/bluetoothSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@string/onClickButton"
            android:paddingVertical="16dp"
            android:text="Bluetooth"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:background="#C2E19F"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test ToggleSwitch : "
            android:textColor="#0000FF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/wifiToggle"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="@string/onToggleButton"
            android:text="ToggleButton"
            android:textOff="WIFI OFF"
            android:textOn="WIFI ON" />

        <ToggleButton
            android:id="@+id/bluetoothToggle"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="@string/onToggleButton"
            android:text="ToggleButton"
            android:textOff="BLUETOOTH OFF"
            android:textOn="BLUETOOTH ON" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />
</LinearLayout>